<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Scan">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">

        <com.dd.morphingbutton.impl.LinearProgressButton
            android:id="@+id/scan"
            android:layout_marginTop="65dp"
            android:paddingHorizontal="30dp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Scan to continue"
            android:textColor="#FFFFFF"
            android:visibility="visible" />
        <com.victor.loading.rotate.RotateLoading
            android:layout_width="100dp"
            android:layout_marginTop="40dp"
            app:loading_color="@color/green"
            android:layout_gravity="center"
            android:layout_height="100dp"
            android:id="@+id/rotator"/>
        <LinearLayout
            android:visibility="gone"
            android:id="@+id/info"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:paddingBottom="20dp"
            android:background="@drawable/containerr"
            android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Amoxicillin"
            android:layout_marginTop="25dp"
            android:textStyle="bold"
            android:textSize="20dp"/>
        <com.andexert.library.RippleView
            android:id="@+id/rippleView"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingHorizontal="20dp"
                android:background="@drawable/shapebutt"
                android:text="Manufacturing Date"
                android:textColor="#FFFFFF" />
        </com.andexert.library.RippleView>

        <com.andexert.library.RippleView
            android:layout_width="match_parent"
            android:layout_marginTop="13dp"

            android:layout_marginLeft="20dp"
            android:layout_height="wrap_content">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingHorizontal="20dp"
                android:background="@drawable/shapebutt"
                android:text="Expiry Date"
                android:textColor="#FFFFFF" />
        </com.andexert.library.RippleView>

        <com.andexert.library.RippleView
            android:layout_width="match_parent"
            android:layout_marginTop="13dp"
            android:layout_marginLeft="20dp"
            android:layout_height="wrap_content">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingHorizontal="20dp"
                android:background="@drawable/shapebutt"
                android:text="Ingredients"
                android:textColor="#FFFFFF" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingHorizontal="20dp"
                android:background="@drawable/shapebutt"
                android:text="Dosage"
                android:textColor="#FFFFFF" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingHorizontal="20dp"
                android:background="@drawable/shapebutt"
                android:text="Dosage"
                android:textColor="#FFFFFF" />
        </com.andexert.library.RippleView>
        </LinearLayout>
    </LinearLayout>


</FrameLayout>